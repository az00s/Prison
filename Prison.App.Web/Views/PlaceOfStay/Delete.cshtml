@model PlaceOfStay

@{
    ViewBag.Title = "Delete";
}

<h3>Вы действительно хотите удалить это место содержания?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "PlaceOfStay",new { id=Model.PlaceID}))
