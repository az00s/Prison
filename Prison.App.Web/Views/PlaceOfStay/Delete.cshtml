        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="btn-group">
                <input type="button" onclick="history.back()" class="btn btn-default" value="Назад">
                <input type="submit" value="Удалить" class="btn btn-danger" />
            </div>
        </div>
    }
</div>
