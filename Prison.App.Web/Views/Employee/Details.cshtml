@model EmployeeIndexViewModel

@{
    ViewBag.Title = "Детали";
}

<h2>О сотруднике</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MiddleName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Position)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position)
        </dd>
    </dl>
</div>
<div class="btn-group">
    <input type="button" onclick="history.back()" class="btn btn-default" value="Назад">
    @if (User.IsInRole("editor") || User.IsInRole("admin"))
    {
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.EmployeeID }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Удалить", "Delete", new { id = Model.EmployeeID }, new { @class = "btn btn-danger" })

    }

</div>

