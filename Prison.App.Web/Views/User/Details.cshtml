@model Prison.App.Web.Models.User.UserEditViewModel

@{
    ViewBag.Title = "Детали";
}

<h2>О пользователе</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd>
            @foreach (var role in Model.Roles)
            {
                @role.RoleName<br />
            }

        </dd>

    </dl>
</div>
<div class="btn-group">
    <input type="button" onclick="history.back()" class="btn btn-default" value="Назад">
    @if (User.IsInRole("editor") || User.IsInRole("admin"))
    {
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.UserID }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Удалить", "Delete", new { id = Model.UserID }, new { @class = "btn btn-danger" })

    }

</div>
