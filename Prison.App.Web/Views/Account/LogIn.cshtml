@model UserLoginViewModel

@{
    ViewBag.Title = "Вход";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="validation-summary-errors text-danger ">

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "LoginForm" }))
        {
            <div class="row">
                <div class="col-xs-1 col-sm-3 col-md-4 col-lg-4.5 ">
                </div>
                <div class="col-xs-7 col-sm-6 col-md-4 col-lg-3">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group has-feedback">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"><label></label></i></span>
                                    @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Имя", @Value = "Пуаро", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group has-feedback">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-minus-sign"><label></label></i></span>
                                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Пароль", @Value = "пароль", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                            <div class="form-group">
                                <div class="input-group">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-3 col-sm-3 col-md-4 col-lg-4.5"></div>

            </div>
        }
    </div>

    <script src="~/Scripts/Login.js"></script>
</body>
</html>
