<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Спец изолятор</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/CommonScripts.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="col-md-offset-1">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">

                    <ul class="nav navbar-nav">

                        @{ if (User.IsInRole("editor") || User.IsInRole("admin"))
                            {
                                <li>@Html.ActionLink("Задержанные", "Index", "Detainee")</li>
                                <li>@Html.ActionLink("Сотрудники", "Index", "Employee")</li>
                                <li>@Html.ActionLink("Места содержания", "Index", "PlaceOfStay")</li>
                                <li>@Html.ActionLink("Должности", "Index", "Position")</li>
                                <li>@Html.ActionLink("Номера телефонов", "Index", "PhoneNumber")</li>
                                <li>@Html.ActionLink("Семейные положения", "Index", "Status")</li>
                                 <li>@Html.ActionLink("Поиск", "Search", "Detainee")</li>
                            }
                        }


                       
                    </ul>
                    @{ if (User.IsInRole("admin"))
                        {
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Администртор <span class="caret"></span></a>
                                    <ul class="dropdown-menu navbar-inverse navbar-nav">
                                        <li>@Html.ActionLink("Пользователи", "Index", "User")</li>
                                        <li role="separator" class="divider"></li>
                                        <li>@Html.ActionLink("Роли", "Index", "Role")</li>
                                    </ul>
                                </li>
                            </ul>
                        }
                    }
                    @Html.Partial("_LogInPartial")

                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        
    </div>

   
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>