@model IEnumerable<Prison.App.Web.Models.PositionViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Должности</h2>

<p>
    @Html.ActionLink("Добавить должность", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.PositionName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.PositionID }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.PositionID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.PositionID })
            </td>
        </tr>
    }

</table>
