@model Prison.App.Web.Models.DetentionCreateViewModel
@{ 
    Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal panel panel-default">

        <div class="panel-heading text-center">Сведения о задержании</div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.DetentionDate, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    <div class="input-group datetimepicker">
                        <span class="input-group-addon">
                            <span class="glyphicon-calendar glyphicon"></span>
                        </span>
                        @Html.EditorFor(model => model.DetentionDate, null, "Detentions[0].DetentionDate", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.DetentionDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DetainedByWhomID, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.DropDownList("Detentions[0].DetainedByWhomID", new SelectList(Model.Employees, "EmployeeID", "LastName"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DetainedByWhomID, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.DeliveryDate, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    <div class="input-group datetimepicker">
                        <span class="input-group-addon">
                            <span class="glyphicon-calendar glyphicon"></span>
                        </span>
                        @Html.EditorFor(model => model.DeliveryDate, null, "Detentions[0].DeliveryDate", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.DeliveryDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DeliveredByWhomID, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.DropDownList("Detentions[0].DeliveredByWhomID", new SelectList(Model.Employees, "EmployeeID", "LastName"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DeliveredByWhomID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PlaceID, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.DropDownList("Detentions[0].PlaceID", new SelectList(Model.Places, "PlaceID", "Address"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PlaceID, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>
}


