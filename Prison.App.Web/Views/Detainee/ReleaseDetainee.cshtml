@model ReleaseDetaineeViewModel
@{
    Layout = null;
}

<div id="ReleaseModal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">


            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title text-center">Сведения об оcвобождении</h4>
            </div>
            @using (Html.BeginForm("ReleaseDetainee", "Detainee", null, FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-12 col-lg-12">
                                <fieldset>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.DetentionID)
                                    @Html.HiddenFor(model => model.DetaineeID)
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ReleasеDate, htmlAttributes: new { @class = "control-label col-md-5" })
                                        <div class="col-md-6">
                                            <div class="input-group datetimepicker">
                                                <span class="input-group-addon">
                                                    <span class="glyphicon-calendar glyphicon"></span>
                                                </span>
                                                @Html.EditorFor(model => model.ReleasеDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.ReleasеDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ReleasedByWhomID, htmlAttributes: new { @class = "control-label col-md-5" })
                                        <div class="col-md-6">
                                            @Html.DropDownList("ReleasedByWhomID", new SelectList(Model.Employees, "EmployeeID", "LastName"), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.ReleasedByWhomID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        @Html.LabelFor(model => model.AmountForStaying, htmlAttributes: new { @class = "control-label col-md-5" })
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.AmountForStaying, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AmountForStaying, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PaidAmount, htmlAttributes: new { @class = "control-label col-md-5" })
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.PaidAmount, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PaidAmount, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-toggle="modal">Закрыть</button>
                    <button type="submit" class="btn btn-danger">Записать</button>
                </div>

            }
        </div>
    </div>
</div>

<script src="~/Scripts/Detainee/ReleaseDetaineeScripts.js"></script>
