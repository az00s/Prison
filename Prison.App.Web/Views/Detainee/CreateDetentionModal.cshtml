@model Prison.App.Web.Models.DetentionCreateViewModel
@{ 
    Layout = null;
}

<div id="CreateDetentionModal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">


            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title text-center">Сведения о задержании</h4>
            </div>
            @using (Html.BeginForm("CreateDetention","Detainee",FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model=>model.DetaineeID)
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12 col-lg-12">
                            <fieldset>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DetentionDate, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-6">
                                        <div class="input-group" id="dtmReleaseDate">
                                            <span class="input-group-addon">
                                                <span class="glyphicon-calendar glyphicon"></span>
                                            </span>
                                            @Html.EditorFor(model => model.DetentionDate, null, "DetentionDate", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DetentionDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DetainedByWhomID, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-6">
                                        @Html.DropDownList("DetainedByWhomID", new SelectList(Model.Employees, "EmployeeID", "LastName"), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DetainedByWhomID, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="form-group">
                                    @Html.LabelFor(model => model.DeliveryDate, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-6">
                                        <div class="input-group datetimepicker">
                                            <span class="input-group-addon">
                                                <span class="glyphicon-calendar glyphicon"></span>
                                            </span>
                                            @Html.EditorFor(model => model.DeliveryDate, null, "DeliveryDate", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DeliveryDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DeliveredByWhomID, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-6">
                                        @Html.DropDownList("DeliveredByWhomID", new SelectList(Model.Employees, "EmployeeID", "LastName"), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DeliveredByWhomID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PlaceID, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-6">
                                        @Html.DropDownList("PlaceID", new SelectList(Model.Places, "PlaceID", "Address"), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.PlaceID, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" >Записать</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" data-toggle="modal">Закрыть</button>
            </div>  
            }

            
        </div>
    </div>
</div>


